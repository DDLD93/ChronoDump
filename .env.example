# Mongo connection (omit trailing /db to include ALL DBs)
MONGO_URI=mongodb://root:example@mongodb:27017/?authSource=admin

# Scheduling (cron expression). Default: every day at 01:30 UTC
BACKUP_CRON=30 1 * * *

# Where to write archives inside container
BACKUP_PATH=/app/backups

# Retention in days (delete older archives)
RETENTION_DAYS=7

# Include/exclude system DBs
INCLUDE_ADMIN_DB=false
INCLUDE_CONFIG_DB=false
INCLUDE_LOCAL_DB=false

# Optional S3 upload
UPLOAD_TO_S3=false
S3_ENDPOINT=
S3_BUCKET=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_REGION=
S3_FORCE_PATH_STYLE=true
